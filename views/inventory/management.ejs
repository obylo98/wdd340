<h1><%- title %></h1>

<!-- Proper way to display flash messages -->
<% if (messages && messages.notice) { %>
    <ul class="notice">
        <% messages.notice.forEach(msg=> { %>
            <li>
                <%= msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <ul class="remove-bullet">
                    <li><a href="/inv/add-classification">Add New Classification</a></li>
                    <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
                </ul>