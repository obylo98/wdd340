<h1><%- title %></h1>
<% if (messages && messages.notice) { %>
    <div class="notice">
        <%= messages.notice %>
    </div>
    <% } %>

        <form class="compose-form" action="/message/send" method="post">
            <div class="form-group">
                <label>Recipient</label>
                <%- recipientList %>
            </div>

            <div class="form-group">
                <label>Subject</label>
                <input type="text" name="message_subject" required value="<%- locals.Subject %>">
            </div>

            <div class="form-group">
                <label>Message</label>
                <textarea name="message_body" required><%- locals.Body %></textarea>
            </div>

            <input type="submit" value="Send Message">
        </form>